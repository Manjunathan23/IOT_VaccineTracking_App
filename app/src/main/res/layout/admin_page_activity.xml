<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg5"
    tools:context=".Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Trip:"
        android:layout_marginStart="45dp"
        android:layout_marginTop="350dp"
        android:textStyle="bold"
        android:textColor="#CC000000"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/tripnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:textColorHint="#808080"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_numbers_24"
        android:hint="Trip ID"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="0dp" />


    <EditText
        android:id="@+id/vaccname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:drawableStart="@drawable/ic_baseline_abc_24"
        android:textColorHint="#808080"
        android:hint="Name"
        android:textColor="#000000"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="0dp" />





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Add" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/alltrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="View all trips"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:textSize="15dp"
        android:textColor="#CC000000"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/list">
    <TextView
        android:id="@+id/listtrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="45dp"
        android:textSize="15dp"
        android:inputType="number"/></LinearLayout>
</LinearLayout>
